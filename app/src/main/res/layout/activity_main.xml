
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="595dp"
    android:background="#FFFFFF" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/header"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/repeat_bg"
            android:orientation="vertical" >
        </LinearLayout>
        

   
    
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="@dimen/_120sdp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="পরীক্ষার নামঃ"

                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/spnExamType"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"
                android:layout_height="wrap_content" />

        </LinearLayout>
        
                <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="@dimen/_120sdp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="পরীক্ষার বছরঃ"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/spnExamYear"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="@dimen/_120sdp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="বিভাগঃ"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/spnDivision"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="@dimen/_120sdp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="জেলাঃ"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/spnDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                 />

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="@dimen/_120sdp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="উপজেলা/থানাঃ"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/spnUpozila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                />

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="@dimen/_120sdp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="রোল নম্বরঃ"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/rollNoEtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="সমর্পণ করুন " />

            <Button
                android:id="@+id/btnReSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="বাতিল করুন " />

        </LinearLayout>
        
        	<TableRow
		    android:id="@+id/tableRow7"
		    android:padding="10dp"
			android:background="#276994"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >

			<TextView
			    android:id="@+id/textView41"
			    android:layout_width="match_parent"
			    android:layout_height="fill_parent"
			    android:textColor="#FFFFFF"
			    android:text="Copyright@2014  Developed By Nanosoft " />

		  	</TableRow> 
        
        

    </LinearLayout>
    
</RelativeLayout>

</ScrollView>